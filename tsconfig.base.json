{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmitOnError": false,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "declaration": true
  }
}
