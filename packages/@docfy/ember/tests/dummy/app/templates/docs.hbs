<div class="flex">
  <div class="relative flex-shrink-0">
    <div class="absolute inset-y-0 right-0 w-screen border-r border-gray-200 bg-gray-50"></div>
    <nav class="sticky w-64 h-screen pt-8 pt-10 mr-8 overflow-y-scroll leading-snug top-16">
      <DocfyOutput @scope="docs" as |node|>
        <ul class="-mt-4">
          {{#each node.pages as |page|}}
            <li class="mt-4">
              <div class="flex items-center">
                <span class="pr-3 text-gray-300">
                  <svg viewBox="0 0 100 100" class="inline-block w-2 h-2 fill-current">
                    <circle r="30" cx="50" cy="50"></circle>
                  </svg>
                </span>
                <DocfyLink
                  @to={{page.url}}
                  class="font-medium text-gray-900"
                  @activeClass="text-gray-900 font-bold"
                >
                  {{page.title}}
                </DocfyLink>
              </div>
            </li>
          {{/each}}

          {{#each node.children as |child|}}
            <li class="mt-4">
              <div class="font-medium text-gray-900">
                {{child.label}}
              </div>

              <ul class="pl-3 font-normal border-l border-gray-200">
                {{#each child.pages as |page|}}
                  <li class="mt-4">
                    <div class="flex flex-no-wrap items-center">
                      <span class="pr-3 text-gray-300">
                        <svg viewBox="0 0 100 100" class="inline-block w-2 h-2 fill-current">
                          <circle r="30" cx="50" cy="50"></circle>
                        </svg>
                      </span>
                      <DocfyLink
                        @to={{page.url}}
                        class="font-medium text-gray-900"
                        @activeClass="text-gray-900 font-bold"
                      >
                        {{page.title}}
                      </DocfyLink>
                    </div>
                  </li>
                {{/each}}

                {{#each child.children as |subChild|}}
                  <li class="mt-4">
                    <div class="font-medium text-gray-900">
                      {{subChild.label}}
                    </div>

                    <ul class="pl-3 font-normal border-l border-gray-200">
                      {{#each subChild.pages as |page|}}
                        <li class="mt-4">
                          <div class="flex flex-no-wrap items-center">
                            <span class="pr-3 text-gray-300">
                              <svg viewBox="0 0 100 100" class="inline-block w-2 h-2 fill-current">
                                <circle r="30" cx="50" cy="50"></circle>
                              </svg>
                            </span>
                            <DocfyLink
                              @to={{page.url}}
                              class="font-medium text-gray-900"
                              @activeClass="text-gray-900 font-bold"
                            >
                              {{page.title}}
                            </DocfyLink>
                          </div>
                        </li>
                      {{/each}}
                    </ul>
                  </li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </DocfyOutput>

      <div class="mt-16">
        <DocfyOutput @fromCurrentURL={{true}} as |page|>
          {{#if page.headings.length}}
            <div class="mb-4 font-medium text-gray-900">
              On this page:
            </div>
            <ul>
              {{#each page.headings as |heading|}}
                <li class="mt-4">
                  <span class="pr-3 text-gray-300">
                    <svg viewBox="0 0 100 100" class="inline-block w-2 h-2 fill-current">
                      <circle r="30" cx="50" cy="50"></circle>
                    </svg>
                  </span>
                  <DocfyLink @to={{page.url}} @anchor={{heading.id}}>
                    {{heading.title}}
                  </DocfyLink>
                </li>
              {{/each}}
            </ul>
          {{/if}}
        </DocfyOutput>
      </div>

    </nav>
  </div>

  <div class="flex-1 w-full pt-10 pl-16 leading-relaxed text-gray-800">
    <div class="markdown">
      {{outlet}}
    </div>

    <DocfyOutput @fromCurrentURL={{true}} as |page|>
      {{#if page.editUrl}}
        <div class="mt-10 text-right">
          <a href={{page.editUrl}} class="text-sm">
            Edit this page
          </a>
        </div>
      {{/if}}
    </DocfyOutput>

    <div class="flex justify-between my-10">
      <DocfyPreviousAndNextPage as |previous next|>
        <div>
          {{#if previous}}
            <div class="text-sm">Previous</div>

            <DocfyLink @to={{previous.url}} class="text-xl text-blue-500">
              {{previous.title}}
            </DocfyLink>
          {{/if}}
        </div>
        <div>
          {{#if next}}
            <div class="text-sm text-right">Next</div>

            <DocfyLink @to={{next.url}} class="text-xl text-blue-500">
              {{next.title}}
            </DocfyLink>
          {{/if}}
        </div>
      </DocfyPreviousAndNextPage>
    </div>
  </div>
</div>
